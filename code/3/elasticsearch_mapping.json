{
    "template": "logstash*",
    "settings": {
        "index.query.default_field": "@message",
        "index.cache.field.type": "soft"
    },
    "mappings": {
        "_default_": {
            "_all": {
                "enabled": false
            },
            "_source": { 
                "compress": "true"
            },
            "properties": {
                "@message": {
                    "type": "string",
                    "index": "analyzed"
                },
                "@source": {
                    "type": "string",
                    "index": "not_analyzed"
                },
                "@source_host": {
                    "type": "string",
                    "index": "not_analyzed"
                },
                "@source_path": {
                    "type": "string",
                    "index": "not_analyzed"
                },
                "@tags": {
                    "type": "string",
                    "index": "not_analyzed"
                },
                "@timestamp": {
                    "type": "date",
                    "index": "not_analyzed"
                },
                "@type": {
                    "type": "string",
                    "index": "not_analyzed"
                }
            }
        }
    }
}
